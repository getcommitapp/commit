{
  "name": "@commit/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "lint": "prettier --check . && eslint .",
    "dev": "wrangler dev",
    "dev:preview": "wrangler dev --env preview",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/index.ts",
    "db:migrate:preview": "wrangler d1 migrations apply commit-api-db-preview --remote --env preview",
    "db:migrate:production": "wrangler d1 migrations apply commit-api-db --remote --env production",
    "deploy:preview": "wrangler deploy --env preview",
    "deploy:production": "wrangler deploy --env production"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.7",
    "@commit/types": "workspace:*",
    "better-auth": "^1.3.7",
    "better-sqlite3": "^12.2.0",
    "chanfana": "^2.6.3",
    "drizzle-orm": "^0.36.3",
    "hono": "^4.6.20",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.67",
    "@cloudflare/workers-types": "^4.20250826.0",
    "@types/node": "22.13.0",
    "@types/service-worker-mock": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  }
}
