---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import imgLeonard from "../../assets/images/team/leonard.png";
import imgTristan from "../../assets/images/team/tristan.png";
import imgAladin from "../../assets/images/team/aladin.png";
import imgDavid from "../../assets/images/team/david.png";
---

<section id="team" class="border-border scroll-mt-24 border-t bg-white">
  <div class="mx-auto max-w-7xl px-4 py-20 text-center">
    <h2 class="text-3xl font-bold tracking-tight">Meet the team</h2>
    <p class="mx-auto mt-3 max-w-2xl text-slate-600">
      As <img
        src="https://img.shields.io/badge/HEIG--VD-informational?style=for-the-badge&&color=red"
        alt="HEIG-VD badge"
        class="inline-block align-middle"
      />
      students wearing multiple hats, we built commit in 3 weeks.
    </p>

    <div class="mt-10 flex flex-wrap justify-center gap-6">
      <!-- Leonard Cseres -->
      <div
        class="border-border w-[18rem] overflow-hidden rounded-xl border bg-white shadow-sm"
      >
        <Image
          src={imgLeonard}
          alt="Leonard Cseres"
          class="aspect-[4/5] w-full bg-slate-100 object-cover object-top sm:aspect-[3/4]"
        />
        <div class="p-5 text-center">
          <h3 class="text-lg font-semibold text-slate-900">Leonard Cseres</h3>
          <div class="mt-3 flex justify-center gap-4 text-sm">
            <a
              href="https://github.com/leonardcser"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>GitHub</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
            <a
              href="https://www.linkedin.com/in/leonardcsrs"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>LinkedIn</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>
      </div>

      <!-- Tristan Gerber -->
      <div
        class="border-border w-[18rem] overflow-hidden rounded-xl border bg-white shadow-sm"
      >
        <Image
          src={imgTristan}
          alt="Tristan Gerber"
          class="aspect-[4/5] w-full bg-slate-100 object-cover object-top sm:aspect-[3/4]"
        />
        <div class="p-5 text-center">
          <h3 class="text-lg font-semibold text-slate-900">Tristan Gerber</h3>
          <div class="mt-3 flex justify-center gap-4 text-sm">
            <a
              href="https://github.com/TriGerber"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>GitHub</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
            <a
              href="https://www.linkedin.com/in/tristan-gerber-8698b5231/"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>LinkedIn</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>
      </div>

      <!-- Aladin Iseni -->
      <div
        class="border-border w-[18rem] overflow-hidden rounded-xl border bg-white shadow-sm"
      >
        <Image
          src={imgAladin}
          alt="Aladin Iseni"
          class="aspect-[4/5] w-full bg-slate-100 object-cover object-top sm:aspect-[3/4]"
        />
        <div class="p-5 text-center">
          <h3 class="text-lg font-semibold text-slate-900">Aladin Iseni</h3>
          <div class="mt-3 flex justify-center gap-4 text-sm">
            <a
              href="https://github.com/aladin-heig"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>GitHub</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
            <a
              href="https://www.linkedin.com/in/aladin-iseni"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>LinkedIn</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>
      </div>

      <!-- David Schildböck -->
      <div
        class="border-border w-[18rem] overflow-hidden rounded-xl border bg-white shadow-sm"
      >
        <Image
          src={imgDavid}
          alt="David Schildböck"
          class="aspect-[4/5] w-full bg-slate-100 object-cover object-top sm:aspect-[3/4]"
        />
        <div class="p-5 text-center">
          <h3 class="text-lg font-semibold text-slate-900">David Schildböck</h3>
          <div class="mt-3 flex justify-center gap-4 text-sm">
            <a
              href="https://github.com/shadowkudo"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>GitHub</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
            <a
              href="https://www.linkedin.com/in/david-schildboeck-275ds2000/"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-1 rounded-md px-2 py-1 text-slate-700 transition-colors duration-150 hover:bg-slate-100 hover:text-slate-900"
              ><span>LinkedIn</span>
              <Icon
                name="mdi:arrow-top-right"
                class="h-4 w-4"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
