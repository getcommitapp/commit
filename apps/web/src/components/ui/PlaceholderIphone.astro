---
export interface Props {
  class?: string;
  label?: string;
}

const { class: klass = "", label = "Placeholder" } = Astro.props as Props;
---

<div class={`relative ${klass}`}>
  <div class="relative flex aspect-[4/3] w-full items-center justify-center">
    <!-- iPhone bezel background -->
    <div class="relative aspect-[453/912] w-[50%]">
      <img
        src="/images/iphone-bezel.png"
        alt="iPhone bezel"
        class="absolute inset-0 z-10 h-full w-full object-contain"
      />

      <!-- Content overlay positioned inside the phone screen -->
      <div class="absolute inset-0 z-0 flex items-center justify-center">
        <div
          class="relative aspect-[453/912] h-[95%] w-[90%] overflow-hidden rounded-3xl bg-gradient-to-br from-slate-50 to-white"
        >
          <div
            class="bg-[radial-gradient(closest-side,theme(colors.primary)_0%,transparent_60%)] absolute inset-0 opacity-60"
          >
          </div>
          <div
            class="bg-primary/60 absolute -top-6 -right-6 h-40 w-40 rounded-full blur-3xl"
          >
          </div>
          <div
            class="bg-primary/40 absolute -bottom-8 -left-8 h-48 w-48 rounded-full blur-3xl"
          >
          </div>

          <div
            class="absolute top-16 left-6 w-2/3 rounded-xl border bg-white/70 p-3 shadow-sm backdrop-blur"
          >
            <div class="h-4 w-28 rounded bg-slate-200"></div>
            <div class="mt-2 h-3 w-40 rounded bg-slate-100"></div>
          </div>

          <div
            class="absolute top-36 right-6 w-2/3 rounded-xl border bg-white/70 p-3 shadow-sm backdrop-blur"
          >
            <div class="flex items-center gap-2">
              <div class="bg-primary size-8 rounded"></div>
              <div>
                <div class="h-3 w-24 rounded bg-slate-200"></div>
                <div class="mt-1 h-2.5 w-16 rounded bg-slate-100"></div>
              </div>
            </div>
          </div>

          <div
            class="absolute bottom-6 left-1/2 -translate-x-1/2 rounded-xl border bg-white/70 p-4 shadow-sm backdrop-blur"
          >
            <div class="h-3 w-48 rounded bg-slate-200"></div>
            <div class="mt-2 h-2.5 w-32 rounded bg-slate-100"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <p class="mt-2 text-center text-xs text-slate-500">{label}</p>
</div>
